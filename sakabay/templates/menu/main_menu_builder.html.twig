      </div> #}
      <div class="col sous-nav-bar-item align-items-center d-flex justify-content-center">
        <a href="#" class="fontPatua fontSize16">{{ 'company_director'|trans }}</a>
      </div>
      <div class="col sous-nav-bar-item align-items-center d-flex justify-content-center">
        <a href="#" class="fontPatua fontSize16">{{ 'who_is'|trans }}</a>
      </div>
      <div class="col sous-nav-bar-item align-items-center d-flex justify-content-center">
        <a href="#" class="fontPatua fontSize16">{{ 'contact_us'|trans }}</a>
      </div>
      <div class="col sous-nav-bar-item align-items-center d-flex justify-content-center">
        <a href="#" class="fontPatua fontSize16">{{ 'recruit'|trans }}</a>
      </div>
    </div>
  </div>
</nav>
