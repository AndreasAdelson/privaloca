{% extends 'base.html.twig' %}

{% block title %}
  {% if advantageId is same as("null") %}
    {{ 'advantage_title_create_page'|trans }}
  {% else %}
    {{ 'advantage_title_edit_page'|trans }}
  {% endif %}
{% endblock %}

{% block body %}
  {% if advantageId is same as("null") %}
    <h1 class="fontUbuntuItalic orange-skb text-center p-1">{{ 'advantage_title_create_page'|trans }}</h1>
  {% else %}
    <h1 class="fontUbuntuItalic orange-skb text-center p-1">{{ 'advantage_title_edit_page'|trans }}</h1>
  {% endif %}
<form-advantage :advantage-id="{{ advantageId }}" token="{{ csrf_token('advantage') }}"></form-advantage>
{% endblock %}
