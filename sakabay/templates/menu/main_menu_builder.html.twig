<nav class="navbar p-0 m-0">
  {% if app.user %}
    <button type="button" id="sidebarCollapse" class="btn-menu p-0 w-50px btn">
      <i class="icon-menu fas fa-bars"></i>
    </button>
    <a href="/" class="logo-home-user">
      <img src="{{ asset('build/logo.png') }}"/>
    </a>
  {% else %}
  <a href="/" class="logo-home">
      <img src="{{ asset('build/logo.png') }}"/>
  </a>
    <button title="Connectez-vous" type="button" class="w-50px p-0 btn-user btn">
      <a href="/login"><i class="icon-login far fa-user"></i></a>
    </button>
    <button title="Inscription" type="button" class="w-50px p-0 btn-connect btn">
      <a href="/register"><i class="icon-user fas fa-user-plus"></i></a>
    </button>
  {% endif %}

</nav>
<div class="overlay">
</div>
<div class="wrapper">
    <!-- Sidebar -->
  <nav id="sidebar" class="fontUbuntu">
      <div id="dismiss">
          <i class="fas fa-arrow-left"></i>
      </div>
      <div class="sidebar-header">
      {% if app.user %}
        <div class="row user-info mb-1 pb-2">
          <div class="col-3 my-auto">
            <img class="rounded-circle logo-size-50" src="{{ asset('build/default_user.png') }}"/>
          </div>
          <div class="col-9 pr-1 pl-3 my-auto">
            {{ app.user.login }}
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <a href="/utilisateur/edit/{{ app.user.id }}" class="edit_account">{{ 'edit_account'|trans }}</a>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <a href="/logout" class="logout-btn">{{ 'logout'|trans }}</a>
          </div>
        </div>
        {% endif %}
      </div>
      {% for breadcrumb_category in knp_menu_get('main') %}
        <div class="p-1 pl-3 menu-category fontSize18">
          {{ breadcrumb_category.label|trans }}
        </div>
        <ul class="list-unstyled menu-sub-category m-0">
        {% for breadcrumb_subcategory in breadcrumb_category %}
          <li class="active">
          {% if (breadcrumb_subcategory.children|length != 0)%}
              <div class="container-fluid dropdown-category">
                <a class="fontSize16" href="#{{ breadcrumb_subcategory.label }}" data-toggle="collapse" aria-expanded="false">
                  <div class="row">
                    <div class="col-12 pb-2">
                      <i class="fas fa-caret-right mr-2" ></i>
                      {{ breadcrumb_subcategory.label|trans }}
                    </div>
                  </div>
                </a>
              </div>
              <ul class="collapse list-unstyled menu-sub-link" id="{{ breadcrumb_subcategory.label }}">
                {% for breadcrumb_link in breadcrumb_subcategory %}
                  {% if (breadcrumb_link.uri != "") %}
                    <li>
                        <a href="{{ breadcrumb_link.uri }}">{{ breadcrumb_link.label|trans }}</a>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
          {% else %}
            {% if (breadcrumb_subcategory.uri != "") %}
            <div class="container-fluid menu-link">
              <div class="row">
                <div class="col-12">
                  <a class="fontSize16" href="{{ breadcrumb_subcategory.uri }}">
                    {{ breadcrumb_subcategory.label|trans }}
                  </a>
                </div>
              </div>
            </div>
            {% endif %}
          {% endif %}
          </li>

        {% endfor %}
        </ul>
      {% endfor %}
  </nav>
  <div id="content">
  </div>
</div>
