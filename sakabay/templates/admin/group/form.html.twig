{% extends 'base.html.twig' %}

{% block title %}
  {% if groupId is same as("null") %}
    {{ 'group_title_create_page'|trans }}
  {% else %}
    {{ 'group_title_edit_page'|trans }}
  {% endif %}
{% endblock %}

{% block body %}
  {% if groupId is same as("null") %}
    <h1 class="fontUbuntuItalic orange-skb text-center p-1">{{ 'group_title_create_page'|trans }}</h1>
  {% else %}
    <h1 class="fontUbuntuItalic orange-skb text-center p-1">{{ 'group_title_edit_page'|trans }}</h1>
  {% endif %}
<form-group :group-id="{{ groupId }}" token="{{ csrf_token('group') }}"></form-group>
{% endblock %}
